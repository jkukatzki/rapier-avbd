{
  "name": "threlte-workspace",
  "private": true,
  "version": "0.1.0",
  "description": "Workspace hosting dual Threlte viewers for Rapier baseline and AVBD builds.",
  "scripts": {
    "dev:avbd": "pnpm --filter avbd-viewer dev",
    "dev:impulse": "pnpm --filter impulse-viewer dev",
    "build:avbd": "pnpm --filter avbd-viewer build",
    "build:impulse": "pnpm --filter impulse-viewer build",
    "preview:avbd": "pnpm --filter avbd-viewer preview",
    "preview:impulse": "pnpm --filter impulse-viewer preview",
    "lint": "pnpm -r lint",
    "check": "pnpm -r check",
    "test": "pnpm -r --if-present test"
  }
}
